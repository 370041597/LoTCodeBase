@model UserInfo

<br /><br /><hr />
@using (Html.BeginForm("LoginOn", "Form", FormMethod.Post, new { @class = "form-inline"}))
{
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "请输入用户名" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Pass)
        @Html.PasswordFor(m => m.Pass, new { htmlAttributes = new { @class = "form-control", placeholder = "请输入密码" } })
    </div>
    <button type="submit" class="btn btn-default">点 我 登 录</button>
}
<br /><hr />
@section Scripts{
    @Scripts.Render("~/JS/JQVal")
}